<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/content_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/dashboard_header_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextLabel"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"/>
    <TextView
        android:id="@+id/label_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_steps_text"
        style="@style/TextLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_header"/>

    <TextView
        android:id="@+id/tv_today_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_step"
        android:textSize="@dimen/text_large"/>


    <TextView
        android:id="@+id/label_active_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_active_time_text"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/tv_today_steps"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/TextLabel"
        android:layout_marginTop="64dp"/>
    <TextView
        android:id="@+id/tv_today_active_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_active_time_dummy"
        app:layout_constraintTop_toBottomOf="@id/tv_today_steps"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_marginTop="64dp"/>
    <TextView
        android:id="@+id/label_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_distance_text"
        app:layout_constraintTop_toBottomOf="@id/label_active_time"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/TextLabel"/>
    <TextView
        android:id="@+id/tv_today_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_today_active_time"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/activity_horizontal_margin"/>
    <TextView
        android:id="@+id/label_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_calories_text"
        app:layout_constraintTop_toBottomOf="@id/label_distance"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/TextLabel"/>

    <TextView
        android:id="@+id/tv_today_calories_burned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_today_distance" />
</android.support.constraint.ConstraintLayout>